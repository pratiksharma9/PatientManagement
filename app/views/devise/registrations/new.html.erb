<table cellspacing="5" cellpadding="5" align="center">

	<tr>
		<td colspan="2"><h2><center>Sign Up</center></h2></td>
	</tr>

	<%= form_for resource, as: resource_name, url: registration_path(resource_name) do |f| %>

	<div class="errors">
		<tr>
			<td colspan="2"></center><%= devise_error_messages! %></center></td>
		</tr>		
	</div>

	<div class="field">
		<tr>
			<td><%=f.label :User_Type %></td>
			<td width="300">
				<%=f.select :user_type, options_for_select(['Select Role', 'Doctor', 'Patient'])%>
				<p id="user_user_type_error" class="sign-up-error"></p>
			</td>
			<td ></td>
		</tr>
	</div>

	<div class="field">
		<tr>
			<td><%= f.label :name %></td>
			<td>
				<%= f.text_field :name%>
				<p id="user_name_error" class="sign-up-error"></p>
			</td>
		</tr>
	</div>
	
   	<div class="field">
		<tr>
			<td><%= f.label :email%></td>
			<td>
				<%= f.email_field :email%>
				<p id="user_email_error" class="sign-up-error"></p>
			</td>
		</tr>
	</div>

	<div class="field">
		<tr>
			<td><%= f.label :password %></td>
    
			<td>
			<%= f.password_field :password, autocomplete: "off"%><br>
			
			<% if @minimum_password_length %>
			<em>(<%= @minimum_password_length %> min and 15 max characters)</em>
			<% end %><br />
			<p id="user_password_error" class="sign-up-error"></p>
    
			</td>
			</tr>
	 </div>

	<div class="field">
		<tr>
			<td><%= f.label :password_confirmation %></td>
			<td>
				<%= f.password_field :password_confirmation, autocomplete: "off" %>
				<p id="user_password_confirmation_error" class="sign-up-error"></p>
			</td>
		</tr>
	</div>
	
	<div class="field">
		<tr>
			<td><%= f.label :gender %></td>
			<td>
				<%= f.radio_button :gender, "Male", class: 'user_gender' %><%= f.label("Male") %>
				<%= f.radio_button :gender, "Female", class: 'user_gender'%>
				<%= f.label("Female") %>
				<p id="user_gender_error" class="sign-up-error"></p>
			</td>
		</tr>
	</div>
	
	<div class="field">
		<tr>
			<td><%= f.label :Date_of_Birth %></td>
			<td>
				<%= f.text_field :dob, class: "date_custom"%>
				<p id="user_dob_error" class="sign-up-error"></p>
			</td>
		</tr>
	</div>
	
	<div class="field">
		<tr>
			<td><%= f.label :mobile_Number%></td>
			<td>
				<%= f.text_field :mobile, minlength: 10 , maxlength: 10, size: 20%>
				<p id="user_mobile_error" class="sign-up-error"></p>
			</td>
		</tr>
	</div>
	
	<div class="field">
		<tr>
			<td><%= f.label :Alternate_mobile%></td>
			<td>
				<%= f.text_field :alternate_mobile, minlength: 10 , maxlength: 10, size: 20%>
				<p id="user_alternate_mobile_error" class="sign-up-error"></p>
			</td>
		</tr>
	</div>
	
	<div class="field">
		<tr>
			<td><%= f.label :Address%></td>
			<td>
				<%= f.text_area :address, size: "31x6"%>
				<p id="user_address_error" class="sign-up-error"></p>
			</td>
		</tr>
	</div>
	
	<div class="field">
		<tr>
			<td><%= f.label :City %></td>
			<td>
				<%= f.select :city, options_for_select(['Indore','Bhopal','Ujjain','Rewa','Satna','Neemuch']), {prompt: 'Select City'} %>
				<p id="user_city_error" class="sign-up-error"></p>
			</td>
			
		</tr>
	</div>
	
	<div class="field">
		<tr>
			<td><%= f.label :state%></td>
			<td>
				<%= f.select :state, options_for_select(['Madhya Pradesh','Uttar Pradesh','Punjab','Hariyana','J&K','Karnataka']),{:prompt => 'Select State'}%>
				<p id="user_state_error" class="sign-up-error"></p>
			</td>
		</tr>
	</div>
	
	<div class="field">
		<tr>
			<td><%= f.label :country%></td>
			<td>
				<%= f.select :country, options_for_select(['India', 'US', 'UK', 'China', 'Russia', 'Australia']), {:prompt => 'Select Country'}%>
				<p id="user_country_error" class="sign-up-error"></p>
			</td>
		</tr>
	</div>
	
	<div class="field">
		<tr>
			<td><%= f.label :pincode%></td>
			<td>
				<%= f.text_field :pincode%>
				<p id="user_pincode_error" class="sign-up-error"></p>
			</td>
		</tr>
	</div>
	
	<div class="actions">
		<tr>
    		<td colspan="2"><center><%= f.submit "Sign up" %></center></td>
    	</tr>
	</div>
	
	<div class="errors">
		<tr>
			<td colspan="2" align="center">
				<%= render "devise/shared/links" %>
			</td>
		</tr>		
	</div>


	<% end %>

	
</table>
